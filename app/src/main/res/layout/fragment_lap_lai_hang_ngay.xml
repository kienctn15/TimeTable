            android:layout_height="wrap_content"
            android:text="Giờ bắt đầu" />

        <TextView
            android:id="@+id/tv_fragment_laplai_chongio_dukienkt"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
