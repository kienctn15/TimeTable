<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.falcon.timetable.DanhSachCongViec.ThemCongViecFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên công việc"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_themcongviec_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa điểm"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_themcongviec_diadiem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_themcongviec_mota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lịch trình"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rbg_themcongviec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingTop="5dp">
                <!--android:checkedButton="@+id/rbg_rd_khongll"-->
                <RadioButton
                    android:id="@+id/rbg_rd_khongll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Không lặp lại"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rbg_rd_llhangngay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tất cả các ngày (30 ngày)"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rbg_rd_lltheotuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lặp lại theo tuần (24 tuần)"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rbg_rd_lltheothang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lặp lại theo tháng (6 tháng)"
                    android:textSize="15sp" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/layout_khonglaplai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_kll_chonngay"
                        style="@android:style/Widget.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày" />

                    <TextView
                        android:id="@+id/tv_kll_chongio_batdau"
                        style="@android:style/Widget.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giờ bắt đầu" />

                    <TextView
                        android:id="@+id/tv_kll_chongio_dukienkt"
                        style="@android:style/Widget.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dự kiến kết thúc" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_hangngay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_laplai_chonngay"
                        style="@android:style/Widget.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày bắt đầu" />

                    <TextView
                        android:id="@+id/tv_laplai_chongio_batdau"
                        style="@android:style/Widget.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giờ bắt đầu" />

                    <TextView
                        android:id="@+id/tv_laplai_chongio_dukienkt"
                        style="@android:style/Widget.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dự kiến kết thúc" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_theotuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_lltt_chonngay"
                            style="@android:style/Widget.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày" />
                        <!--style="@android:style/Widget.Button"-->
                        <TextView
                            android:id="@+id/tv_lltt_chongio_batdau"
                            style="@android:style/Widget.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giờ bắt đầu" />

                        <TextView
                            android:id="@+id/tv_lltt_chongio_dukienkt"
                            style="@android:style/Widget.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dự kiến kết thúc" />
                    </LinearLayout>
                    <!--<Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thêm ngày"
                        android:id="@+id/tv_fragment_lltt_them_ngay"/>-->
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_theothang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_lltth_chonngay"
                            style="@android:style/Widget.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày" />

                        <TextView
                            android:id="@+id/tv_lltth_chongio_batdau"
                            style="@android:style/Widget.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giờ bắt đầu" />

                        <TextView
                            android:id="@+id/tv_lltth_chongio_dukienkt"
                            style="@android:style/Widget.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dự kiến kết thúc" />
                    </LinearLayout>
                    <!--<Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thêm Ngày"
                        android:id="@+id/btn_lltth_themngay"
                        />-->
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/content_frame_themcongviec"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>

            <Button
                android:id="@+id/btn_themcongviec_luu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/cardbackground"
                android:text="Lưu"
                android:textColor="#FFFFFf"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
